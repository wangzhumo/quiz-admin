{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf",
		"ignore": []
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
			},
		"formatter" : {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"quoteProperties":"asNeeded",
			"trailingComma":"none",
			"semicolons":"asNeeded",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"arrowParentheses":"asNeeded"
		}
	}
}
